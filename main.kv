#:import hex kivy.utils.get_color_from_hex
#:set bg_clr hex('#000000')

<DevCalc>:
    canvas.before:
        Color:
            rgba: bg_clr

    FloatLayout:
        orientation: 'vertical'
        pos: root.pos
        size: root.size
        
        Label:
            id:dec_lbl
            pos_hint: {"x":0.15,"y":0.870}
            size_hint: (0.15,0.09)
            text: 'Decimal'
            font_size: (( root.height)+(root.width))/50
            color: 1,1,1,1
            multiline:False

        TextInput:
            id:dec
            pos_hint: {"x":0.40,"y":0.890}
            size_hint: (0.50,0.045)
            hint_text: 'Decimal number'
            background_color: (0.87,0.87,0.87,1)
            cursor_color: (0.56,0.92,0.96,1)
            text_size: self.size
            multiline: False
            write_tab:False
            on_text:app.dec_process()

        Label:
            id:hex_lbl
            pos_hint: {"x":0.125,"y":0.779}
            size_hint: (0.135,0.09)
            text: 'Hex'
            font_size: (( root.height)+(root.width))/50
            color: 1,1,1,1
            multiline:False

        TextInput:
            id:hex
            pos_hint: {"x":0.40,"y":0.790}
            size_hint: (0.50,0.045)
            hint_text: 'Hex number'
            background_color: (0.87,0.87,0.87,1)
            cursor_color: (0.56,0.92,0.96,1)
            text_size: self.size
            multiline: False
            write_tab:False
            on_text:app.hex_process()
        
        Label:
            id:octal_lbl
            pos_hint: {"x":0.125,"y":0.685}
            size_hint: (0.15,0.09)
            text: 'Octal'
            font_size: (( root.height)+(root.width))/50
            color: 1,1,1,1
            multiline:False

        TextInput:
            id:oct
            pos_hint: {"x":0.40,"y":0.697}
            size_hint: (0.50,0.045)
            hint_text: 'Octal number'
            background_color: (0.87,0.87,0.87,1)
            cursor_color: (0.56,0.92,0.96,1)
            text_size: self.size
            multiline: False
            write_tab:False
            on_text:app.oct_process()

        Label:
            id:bin_lbl
            pos_hint: {"x":0.130,"y":0.585}
            size_hint: (0.15,0.09)
            text: 'Binary'
            font_size: (( root.height)+(root.width))/50
            color: 1,1,1,1
            multiline:False

        TextInput:
            id:bin
            pos_hint: {"x":0.40,"y":0.532}
            size_hint: (0.50,0.110)
            hint_text: 'Binary number'
            background_color: (0.87,0.87,0.87,1)
            cursor_color: (0.56,0.92,0.96,1)
            text_size: self.size
            multiline: True
            write_tab:False
            on_text:app.bin_process()

        BoxLayout:
            CheckBox:
                id:chk1
                active: False
                size_hint_x: None
                width: 50
                on_active:app.checkbox1_click(self, self.active)
            Label:
                text_size: (self.width, None)
                text: 'ASCII Value to Character/Character to ASCII Value '
                font_size: (( root.height)+(root.width))/70



        TextInput:
            id:chr1
            disabled:True
            pos_hint: {"x":0.50,"y":0.400}
            size_hint: (0.40,0.050)
            hint_text: 'Character'
            background_color: (0.87,0.87,0.87,1)
            cursor_color: (0.56,0.92,0.96,1)
            text_size: self.size
            multiline: False
            write_tab:False
            opacity: 0
            input_filter: 'int'
            on_text_validate:app.chr_process()

        TextInput:
            id:ord
            disabled:True
            pos_hint: {"x":0.05,"y":0.400}
            size_hint: (0.40,0.050)
            hint_text: 'ASCII '
            background_color: (0.87,0.87,0.87,1)
            cursor_color: (0.56,0.92,0.96,1)
            text_size: self.size
            multiline: False
            write_tab:False
            opacity : 0
            #on_focus:app.ord_process()
            on_text_validate:print(args)














